<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.mapper.CampusBoardAttachMapper">

	<!-- insert -->
	<insert id="insert">
		insert into spring_attach(uuid, uploadpath, filename, filetype, bno) values(#{uuid}, #{uploadPath}, #{fileName}, #{fileType}, #{bno})
	</insert>
	
	<!-- delete bno 일치시-->
	<delete id="delete">
		delete from spring_attach where bno = #{bno}
	</delete>	
	
	<!-- select (findByBno) bno 일치시 (AttachFileDTO 이용) -->
	<select id="findByBno" resultType="com.spring.domain.CampusAttachFileDTO">
		select * from spring_attach where bno = #{bno}
	</select>
	
	<!-- 전일자 첨부파일 리스트 -->
	<select id="getOldFiles" resultType="com.spring.domain.CampusAttachFileDTO">
		select * from spring_attach where uploadPath = to_char(sysdate-1,'yyyy\mm\dd')
	</select>
	
	

</mapper>